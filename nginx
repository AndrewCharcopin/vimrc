error_log  /home/ec2-user/apps/konpeki-react/log/nginx.error.log;
access_log /home/ec2-user/apps/konpeki-react/log/nginx.access.log;
client_max_body_size 2G;
upstream app_server {
  server unix:///home/ec2-user/apps/konpeki-react/tmp/sockets/puma.sock fail_timeout=0;
}
server {
  listen 80;
  server_name konpeki.site;
  proxy_set_header X-Forwarded-Proto $scheme;
  if ( $http_x_forwarded_proto != 'https' ) {
    return 301 https://$host$request_uri;
  }
  keepalive_timeout 5;
  root /home/ec2-user/apps/konpeki-react/frontend/build;
  try_files $uri/index.html $uri.html $uri @app;
  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://app_server;
    allow all;
  }
  error_page 500 502 503 504 /500.html;
  location = /500.html {
    root /home/ec2-user/apps/konpeki-react/frontend/build;
  }
}
server {
  listen 443;
  server_name konpeki.site;
}
